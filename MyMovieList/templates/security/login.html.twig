{% extends 'base.html.twig' %}
{% block body %}

<h1>Login</h1>

<form action="{{ path('security_login') }}" method="POST">
    <div class="form-group">
        <input type="text" placeholder="Email Adress" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <input type="password" placeholder="Password" required name="_password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>

{% endblock %}