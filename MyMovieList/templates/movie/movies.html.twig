{% extends 'base.html.twig' %} {% block body %}

<section class="movies">
  {% for movie in movies %}
  <article>
    <h2>{{ movie.title }} </h2>
    <div class="metadata">
      Sorti le {{ movie.release_date | date('d/m/y') }} dans la cat√©gorie Erotique
    </div>
    <div class="content">
      <img src="{{ movie.image }}" alt="" />
      <h5 class="synopsisTitle">Synopsis</h5>
      <p>
        {{ movie.overview }}
      </p>
      <p>{{ movie.id }}</p>
      <a href="{{ path('showmovie', {'id': movie.id}) }}" class="btn btn-primary">Lire la suite</a>
      <form action="{{ path('movies')}}" method="GET">
        <input type="hidden" name="movie" value="{{ movie.id }}" />
        <select name="list" id="">
          {% for list in lists %}
          <option value="{{ list.id }}">{{ list.name }}</option>
          {% endfor %}
        </select>
        <button type="submit" class="btn btn-success">Add to my list</button>
      </form>
    </div>
  </article>
  {% endfor %}
</section>
{% endblock %}