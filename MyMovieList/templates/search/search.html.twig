{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css" />
<link href="{{ asset('css/base.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
<h1>Top rated movies by TMDB</h1>
<section class="movies">
    {% for movie in movies %}

    <article>
        <div class="image">
            <img src="{{ movie.image }}" alt="" />
        </div>

        <div class="content">
            <h2>{{ movie.title }} </h2>
            <div class="metadata">
                Sorti le {{ movie.release_date | date('d/m/y') }} dans la cat√©gorie Erotique
            </div>
            <p>
                <h5 class="synopsisTitle">Synopsis</h5>
                {{ movie.overview }}
            </p>
            <p id="id">{{ movie.id }}</p>
            <div class="options">
                <div class="more">
                    <a href="{{ path('showmovie', {'id': movie.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>

                <div class="add">
                    <form id="addlistType" action="{{ path('movies')}}" method="GET">
                        <input type="hidden" name="movie" value="{{ movie.id }}" />
                        <select name="list" id="">
                            {% for list in lists %}
                            <option value="{{ list.id }}">{{ list.name }}</option>
                            {% endfor %}
                        </select>
                        <button type="submit" class="btn btn-success">Add to my list</button>
                    </form>
                </div>

            </div>
        </div>
    </article>
    {% endfor %}
</section>
{% endblock %}